<!--components/classic/music/index.wxml-->
<view class="container" hidden="{{hidden}}">
  <image class="classic-img {{playing ? 'rotation' : 'rotation pause'}}" src="{{img}}"/>
  <image bind:tap="onPlay" class="play-img" src="{{playing ? playSrc : pauseSrc}}"/>
  <image class="tag" src="images/music@tag.png"/>
  <text class="content">{{content}}</text>
</view>
